                html += '</div>';
                html += '<div class="relative">';
                html += '<div class="w-full h-full rounded bg-gray-900 translate-y-1 translate-x-1 absolute inset-0"></div>';
                html += '<div class="monaco-container-compose relative z-10 rounded">';
