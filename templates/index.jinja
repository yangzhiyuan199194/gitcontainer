                }
            };
            
            ws.onclose = function(event) {
                console.log('WebSocket å·²å…³é—­');
                if (event.code !== 1000) { // 1000 is normal closure
                    updateStatus('âŒ è¿æ¥ä¸¢å¤±ã€‚è¯·åˆ·æ–°å¹¶é‡è¯•ã€‚');
                }
            };
            
            ws.onerror = function(error) {
