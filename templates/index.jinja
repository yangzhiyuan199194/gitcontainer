        }
        
        function updateStepProgress(message) {
            if (message.includes('å…‹éš†') || message.includes('ğŸ”„')) {
                highlightStep('clone');
            } else if (message.includes('åˆ†æ') || message.includes('ğŸ“Š')) {
                completeStep('clone');
                highlightStep('analyze');
